# LEA Travel Insurance Payment System
# Copy this file to .env and fill in your actual values

# ================================
# STRIPE CONFIGURATION (REQUIRED)
# ================================
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Get this from Stripe Dashboard > Webhooks after creating an endpoint
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ================================
# DATABASE CONFIGURATION
# ================================
AWS_REGION=ap-southeast-1
DYNAMODB_PAYMENTS_TABLE=lea-payments-local

# For local development (Docker)
DDB_ENDPOINT=http://localhost:8000
AWS_ACCESS_KEY_ID=dummy
AWS_SECRET_ACCESS_KEY=dummy

# For production (remove DDB_ENDPOINT and use real AWS credentials)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ================================
# APPLICATION URLS
# ================================
FRONTEND_URL=http://localhost:3000
BACKEND_API_URL=http://localhost:3001
WEBHOOK_URL=http://localhost:8086

# ================================
# SERVICE PORTS (Optional)
# ================================
# These can be customized if you have port conflicts
# BACKEND_PORT=3001
# FRONTEND_PORT=3000
# WEBHOOK_PORT=8086
# PAYMENT_PAGES_PORT=8085
# DYNAMODB_PORT=8000
# DYNAMODB_ADMIN_PORT=8010

# ================================
# DEVELOPMENT FLAGS
# ================================
NODE_ENV=development
LOG_LEVEL=info

# ================================
# EMAIL SERVICE (Optional)
# ================================
# Uncomment and configure for policy confirmation emails
# SENDGRID_API_KEY=your_sendgrid_api_key
# FROM_EMAIL=noreply@lea-insurance.com

# ================================
# SECURITY (Production Only)
# ================================
# JWT_SECRET=your_super_secret_jwt_key_here
# CORS_ORIGIN=https://yourdomain.com